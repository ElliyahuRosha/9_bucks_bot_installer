# --- Database Configuration (Docker Defaults) ---
# הגדרות ברירת מחדל לחיבור הפנימי בין הקונטיינרים. אין לשנות.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=bot_db
# בתוך הדוקר, הכתובת היא שם הסרביס (db) ולא localhost
POSTGRES_HOST=db
POSTGRES_PORT=5432

# --- Internal Paths ---
# נתיב האסטרטגיה בתוך הקונטיינר (קבוע מראש)
STRATEGY_PATH=/app/strategies

# --- Bybit Configuration ---
# >>>> חובה למלא את השדות הבאים <<<<
BYBIT_API_KEY=PUT_YOUR_KEY_HERE
BYBIT_API_SECRET=PUT_YOUR_SECRET_HERE

# הגדרות מסחר
# True = מסחר בכסף דמו (מומלץ להתחלה), False = כסף אמיתי
BYBIT_IS_DEMO=True
ACCOUNT_TYPE=UNIFIED
BALANCE_COIN=USDT
SYMBOL=BTCUSDT
CATEGORY=linear
LEVERAGE=15

# --- Execution Mode ---
# REAL = הרצת האסטרטגיה האמיתית מול השוק (גם בדמו וגם בחי)
# SIMULATION = מצב בדיקות פנימי (לא בשימוש בייצור)
EXECUTION_MODE=REAL